<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="diondouglas.firstgrademathbydion.fragments.general.genderSelect">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/gender_text"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonBoy"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="5"
            android:background="@drawable/boy"
            android:layout_gravity="center"
             />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonGirl"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="5"
            android:background="@drawable/girl"
            android:layout_gravity="center" />
    </LinearLayout>

</FrameLayout>
